[flake8]
# Remove DAR type check. Documentation will be process in a future PR
# Target list is:
# select = B,B9,C,DAR,E,F,N,RST,S,W
select = B,B9,C,E,F,N,RST,S,W
#ignore = E203,E501,RST201,RST203,RST301,W503
ignore = E203,E501,RST201,RST203,RST301,W503, D107, D403, E266, C901, F401, E302
max-line-length = 80
max-complexity = 10
docstring-convention = google
per-file-ignores =
